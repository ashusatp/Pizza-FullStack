<section class="hero py-5">
    <div class="container d-flex  align-items-center justify-content-between mt-2">
        <div class="w-50">
            <h6 class="fs-5"><em>Are you hungry?</em></h6>
            <h1 class="fw-bold">Don't wait!</h1>
            <button class="btn-primary px-4 py-2 rounded-pill mt-4">Order Now</button>
        </div>
        <div class="w-50">
            <img src="/img/hero-pizza.png" alt="" width="650px">
        </div>
    </div>
</section>

<section class="Menu container py-4">

    <h1 class="fw-bold mb-5">All Pizzas</h1>
    <div>
        <div class="row justify-content-between ">

            <% pizzas.forEach(function(pizza){ %>

                <div class="pizaCard col-lg-3">
                    <div class="d-flex flex-column align-items-center justify-content-between">
                        <img class="py-3 mx-auto img_fluid" src="/img/<%= pizza.image %>" alt="pizza" width="200px">
                        <div class="d-flex flex-column align-items-center justify-content-center">
                            <h2 class="text-center fw-bold"><%= pizza.name %></h2>
                            <div class="size-div rounded-pill"><span class="w-100 size text-center text-uppercase fw-bold "><%= pizza.size %></span></div>
                            <div class="w-100 d-flex align-items-center justify-content-around my-2 py-1">
                                <span class="fw-bold">â‚¹<%= pizza.price %></span>
                                <button data-pizza=" <%= JSON.stringify(pizza) %> " class="add-to-cart rounded-pill">
                                    <span>+</span>
                                    <span>Add</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

            <% })%>

                    
        </div>

    </div>

</section>